<div class="jumbotron col-md-4 col-md-offset-4">
	<div class="container">
		<h2>Log in</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		  </div>

		  <div class="row">
		  	<div class="col-md-12">
			  	<div class="login-options">
	          <label>
	            <input id='_user_remember_me' name="_user[remember_me]" type="checkbox" value="1" class="pull-left lowercase">
	            <span class="label"> Remember me</span>
	          </label>
	          <%= link_to t(:forgot_your_password), new_password_path(resource_name), class: "pull-right lowercase", id: "_user_forgot_your_password" %>

			  	</div>
		  	</div>
		  </div>

		  <div class="form-actions text-center">
		  	<div class="row">
		  		<div class="col-md-12 sign-in-up">
		    		<%= f.button :submit, "Log in", class: "login-button btn btn-default" %>
					  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-default" %><br />
		  		</div>
		  	</div>
				<%- if devise_mapping.omniauthable? %>
			  	<div class="row">
			  		<div class="col-md-12">
						  <%= link_to "<i class='fab fa-facebook'></i> Sign in with Facebook".html_safe, user_facebook_omniauth_authorize_url(), class: "btn btn-lg btn-primary" %>
			  		</div>
			  	</div>
				<% end -%>
		  </div>
		<% end %>
	</div>
</div>
