
<%= simple_form_for(@recipe_share, html: { class: 'form-vertical' } ) do |f| %>
  <%= f.error_notification %>

  <div class="row">
    <div class="col-md-4">
      <div class="form-inputs">
        <div class="<%= 'hidden' if @recipe_share.recipe_id.present? %>">
          <%= f.association :recipe, label: "Receita", prompt: "Selecione uma receita", collection: current_user.recipes %>
        </div>
        <div class="<%= 'hidden' if @recipe_share.user_id.present? %>">
        <%= f.association :user, label: "Compartilhar com:", prompt: "Selecione o usuÃ¡rio", collection: User.where.not(id: current_user.id), label_method: :name_or_email %>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions">
    <%= link_to 'Back', recipes_path, class: "btn btn-danger" %>
    <%= f.button :submit, "Compartilhar" %>
  </div>
<% end %>
