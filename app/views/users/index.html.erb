<% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
<% end -%>
<div class="users">
  <h1>Usu√°rios</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Imagem</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Receitas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="image">
            <% if user.image.present? %>
              <%= image_tag(user.image, size: "80") %>
            <% else %>
              <%= image_tag('no-image.png', size: "80") %>
            <% end %>        
          </td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.recipes.count %></td>
          <td><%= link_to "<i class='fas fa-eye'></i>".html_safe, user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
